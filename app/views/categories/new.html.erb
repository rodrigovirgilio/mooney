<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'Lista', categories_path  %></li>
      <li class="active"><%= link_to 'Nova', new_category_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">            
    <div class="inner">
      <br/>
      <div class="flash">
        <%= error_messages_for :category, :header_message => false, :message => false, :header_tag => false, :class => "message error" %>
      </div>
      <% form_for :category, :url => categories_path, :html => { :class => :form } do |f| -%>
        <%= render :partial => "form", :locals => {:f => f} %>
      <% end -%>
    </div>
  </div>
</div>
